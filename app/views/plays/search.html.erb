<p id="notice"><%= notice %></p>

<h1>Results of search for: <%= params[:search_string] %></h1>

<table>
  <thead>
    <tr>
      <th>Title  </th>
      <th>Playwright  </th>
      <th>Year of Release  </th>
      <th>Males  </th>
      <th>Females  </th>
      <th>Total Roles  </th>
      <th>Musical  </th>
      <th>Comedy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody align="middle">
    <% @plays.each do |play| %>
      <tr>
        <td><%= link_to play.title, play %></td>
        <td><%= play.playwright %></td>
        <td><%= play.year_of_release %></td>
        <td><%= play.male_roles %></td>
        <td><%= play.female_roles %></td>
        <td><%= play.total_roles %></td>
        <td><%= play.musical %></td>
        <td><%= play.comedy %></td>
        <td><%= link_to 'Edit', edit_play_path(play) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

