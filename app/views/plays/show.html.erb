<p>
  <h2>
  <%= @play.title %>
  </h2>
</p>

<p>
  <strong>Playwright:</strong>
  <%= @play.playwright %>
</p>

<p>
  <strong>Year of Release:</strong>
  <%= @play.year_of_release %>
</p>

<p>
  <strong>Male Roles:</strong>
  <%= @play.male_roles %>
</p>

<p>
  <strong>Female Roles:</strong>
  <%= @play.female_roles %>
</p>

<p>
  <strong>Total Roles:</strong>
  <%= @play.total_roles %>
</p>

