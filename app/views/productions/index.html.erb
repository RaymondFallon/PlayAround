<p id="notice"><%= notice %></p>

<h1>Productions</h1>

<table>
  <thead>
    <tr>
      <th>Play</th>
      <th>Theater</th>
      <th>Zip code</th>
      <th>Opening</th>
      <th>Closing</th>
      <th>Production notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productions.each do |production| %>
      <tr>
        <td><%= production.play_name %></td>
        <td><%= production.theater %></td>
        <td><%= production.zip_code %></td>
        <td><%= production.opening %></td>
        <td><%= production.closing %></td>
        <td><%= production.production_notes %></td>
        <td><%= link_to 'Show', production %></td>
        <td><%= link_to 'Edit', edit_production_path(production) %></td>
        <td><%= link_to 'Destroy', production, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

