<!DOCTYPE html>
<html>
  <head>
    <title>PlayAround</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="headcard">
      <a href="/plays/">Plays</a>
      <img src="/drama_masks.png" height="60px">
      <a href="/productions/">Productions</a>
      <span id="search_bar">
        <%= form_tag "/plays/search" do %>
          <%= text_field_tag :search_string, "Search by Author/Playwright" %>
          <%= submit_tag "Search" %>
        <% end %>
      </span>
      
    </div>
    
    <div id="padding"></div>
    <p style="color: blue"><%= flash[:notice] %></p>
    </br>
    <div id="content">
    <%= yield %>
    </div>
  </body>
</html>
